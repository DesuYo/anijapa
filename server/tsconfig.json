{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es7", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "../built",
    "sourceMap": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "../node_modules",
    "**/*.spec.ts"
  ]
}
