{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es7"],
    "esModuleInterop": false,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
        "*": [
            "node_modules/",
            "src/types/*"
        ]
    }
  },
  "include": [
      "src/**/*"
  ]
}